<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:app="using:CarinaStudio.ULogViewer"
        xmlns:appControls="using:CarinaStudio.ULogViewer.Controls"
        xmlns:asControls="using:CarinaStudio.AppSuite.Controls"
		xmlns:asScripting="using:CarinaStudio.AppSuite.Scripting"
        xmlns:asXaml="using:CarinaStudio.AppSuite.Xaml"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CarinaStudio.ULogViewer.Controls.LogAnalysisScriptSetEditorDialog"
		Name="window"
		CanResize="True"
        Classes="Dialog"
		Height="{DynamicResource Double/LogAnalysisScriptSetEditorDialog.Height}"
		Icon="/ULogViewer.ico"
        MinHeight="{DynamicResource Double/LogAnalysisScriptSetEditorDialog.MinHeight}"
        MinWidth="{DynamicResource Double/LogAnalysisScriptSetEditorDialog.MinWidth}"
		SizeToContent="Manual"
        Title="{asXaml:StringResource LogAnalysisScriptSetEditorDialog.Title}"
        Width="{DynamicResource Double/LogAnalysisScriptSetEditorDialog.Width}"
		WindowStartupLocation="Manual">

	<DockPanel>

		<!-- Control buttons -->
		<Border Classes="Dialog_ControlButtonsPanel">
			<Grid Classes="Dialog_ControlButtonsPanel" ColumnDefinitions="Auto,*">
				<StackPanel Classes="Dialog_ControlButtonsPanel">
					<Button Classes="Dialog_ControlButton" Command="{Binding #window.OpenDocumentation}" Content="{Binding #window.HelpButtonText}"/>
					<Separator Classes="Dialog_Separator_Small"/>
				</StackPanel>
				<StackPanel Classes="Dialog_ControlButtonsPanel" Grid.Column="1">
					<Button Classes="Dialog_ControlButton" Command="{Binding #window.ApplyCommand}" Content="{asXaml:StringResource Common.Apply}" IsVisible="{Binding !#window.IsNewScriptSet}"/>
					<Button Classes="Dialog_ControlButton" Command="{Binding #window.CompleteEditingCommand}" Content="{Binding #window.OKButtonText}"/>
					<Button Classes="Dialog_ControlButton" Command="{Binding #window.Close}" Content="{Binding #window.CancelButtonText}"/>
				</StackPanel>
			</Grid>
		</Border>

		<!-- Content -->
		<ScrollViewer Name="contentScrollViewer" HorizontalScrollBarVisibility="Disabled">
			<StackPanel Classes="Dialog_ContentPanel_WithItemsGroups">

				<!-- Common -->
				<Border Classes="Dialog_ItemsGroup_Container">
					<StackPanel>
				
						<!-- Name and Icon -->
						<StackPanel IsVisible="{Binding !#window.IsEmbeddedScriptSet}">
							
							<!-- Name -->
							<asControls:DialogItem ItemSize="Small">
								<TextBlock Classes="Dialog_TextBlock_Label" Text="{asXaml:StringResource LogAnalysisScriptSetEditorDialog.Name}"/>
								<TextBox Name="nameTextBox" Classes="Dialog_Item_TextBox" MaxLength="256" Watermark="{asXaml:StringResource Common.Required}"/>
							</asControls:DialogItem>
							<Separator Classes="Dialog_Item_Separator"/>

							<!-- Icon -->
							<asControls:DialogItem>
								<TextBlock Classes="Dialog_TextBlock_Label" Text="{asXaml:StringResource LogAnalysisScriptSetEditorDialog.Icon}"/>
								<appControls:LogProfileIconComboBox Name="iconComboBox" Classes="Dialog_Item_ComboBox" IconColor="{Binding #iconColorComboBox.SelectedItem}"/>
							</asControls:DialogItem>
							<Separator Classes="Dialog_Item_Separator"/>

							<!-- Icon color -->
							<asControls:DialogItem>
								<TextBlock Classes="Dialog_TextBlock_Label" Text="{asXaml:StringResource LogAnalysisScriptSetEditorDialog.IconColor}"/>
								<appControls:LogProfileIconColorComboBox Name="iconColorComboBox" Classes="Dialog_Item_ComboBox"/>
							</asControls:DialogItem>
							<Separator Classes="Dialog_Item_Separator"/>
							
						</StackPanel>

						<!-- Contextual-based -->
						<asControls:DialogItem>
							<StackPanel Classes="Dialog_Item_Text_Container">
								<TextBlock Classes="Dialog_TextBlock_Label" Text="{asXaml:StringResource LogAnalysisScriptSetEditorDialog.IsContextualBased}"/>
								<TextBlock Classes="Dialog_TextBlock_Description" Text="{asXaml:StringResource LogAnalysisScriptSetEditorDialog.IsContextualBased.Description}"/>
							</StackPanel>
							<ToggleSwitch Name="contextBasedToggleSwitch" Classes="Dialog_Item_ToggleSwitch"/>
						</asControls:DialogItem>

					</StackPanel>
				</Border>
				<Separator Classes="Dialog_Separator"/>

				<!-- Scripts -->
				<Border Classes="Dialog_ItemsGroup_Container">
					<StackPanel>

						<!-- Setup script -->
						<asControls:DialogItem>
							<WrapPanel VerticalAlignment="Center">
								<TextBlock Classes="Dialog_TextBlock_Label" Text="{asXaml:StringResource LogAnalysisScriptSetEditorDialog.SetupScript}"/>
								<Button Classes="Dialog_Info_Button" Command="{x:Static app:Utility.OpenLinkCommand}" CommandParameter="{Binding #window.SetupScriptDocumentUri}" ToolTip.Tip="{asXaml:StringResource Common.Help}">
									<Image Classes="Icon" Source="{DynamicResource Image/Icon.Question.Outline}"/>
								</Button>
							</WrapPanel>
							<asControls:EnumComboBox Classes="Dialog_Item_ComboBox" EnumType="{x:Type asScripting:ScriptLanguage}" SelectedItem="{Binding #setupScriptEditor.ScriptLanguage, Mode=TwoWay}"/>
						</asControls:DialogItem>
						<Line Classes="Dialog_Item_Separator_Inner"/>
						<TextBlock Classes="Dialog_TextBlock_Description" Text="{asXaml:StringResource LogAnalysisScriptSetEditorDialog.SetupScript.Description}"/>
						<Separator Classes="Dialog_Item_Separator"/>

						<!-- Analysis script -->
						<asControls:DialogItem>
							<WrapPanel VerticalAlignment="Center">
								<TextBlock Classes="Dialog_TextBlock_Label" Text="{asXaml:StringResource LogAnalysisScriptSetEditorDialog.AnalysisScript}"/>
								<Button Classes="Dialog_Info_Button" Command="{x:Static app:Utility.OpenLinkCommand}" CommandParameter="{Binding #window.AnalysisScriptDocumentUri}" ToolTip.Tip="{asXaml:StringResource Common.Help}">
									<Image Classes="Icon" Source="{DynamicResource Image/Icon.Question.Outline}"/>
								</Button>
							</WrapPanel>
							<asControls:EnumComboBox Classes="Dialog_Item_ComboBox" EnumType="{x:Type asScripting:ScriptLanguage}" SelectedItem="{Binding #analysisScriptEditor.ScriptLanguage, Mode=TwoWay}"/>
						</asControls:DialogItem>
						<Line Classes="Dialog_Item_Separator_Inner"/>
						<TextBlock Classes="Dialog_TextBlock_Description" Text="{asXaml:StringResource LogAnalysisScriptSetEditorDialog.AnalysisScript.Description}"/>
					</StackPanel>
				</Border>
			</StackPanel>
		</ScrollViewer>
		
	</DockPanel>
	
</Window>

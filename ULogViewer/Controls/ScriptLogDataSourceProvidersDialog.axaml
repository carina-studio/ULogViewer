<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:appDataSources="using:CarinaStudio.ULogViewer.Logs.DataSources"
        xmlns:asControls="using:CarinaStudio.AppSuite.Controls"
        xmlns:asXaml="using:CarinaStudio.AppSuite.Xaml"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CarinaStudio.ULogViewer.Controls.ScriptLogDataSourceProvidersDialog"
        Name="dialog"
        Classes="Dialog"
		SizeToContent="WidthAndHeight"
        Title="{asXaml:StringResource ScriptLogDataSourceProvidersDialog.Title}">

	<DockPanel>

		<!-- Control buttons -->
		<Border Classes="Dialog_ControlButtonsPanel">
			<Grid Classes="Dialog_ControlButtonsPanel" ColumnDefinitions="Auto,*">
				<StackPanel Classes="Dialog_ControlButtonsPanel">
					<Button Classes="Dialog_ControlButton" Command="{Binding #dialog.OpenDocumentation}" Content="{Binding #dialog.HelpButtonText}"/>
					<Separator Classes="Dialog_Separator_Small"/>
					<Button Classes="Dialog_ControlButton" Command="{Binding #dialog.AddProvider}" Content="{asXaml:StringResource Common.Add.WithDialog}"/>
					<Button Classes="Dialog_ControlButton" Command="{Binding #dialog.ImportProvider}" Content="{asXaml:StringResource Common.Import.WithDialog}"/>
					<Separator Classes="Dialog_Separator_Small"/>
				</StackPanel>
				<Panel Classes="Dialog_ControlButtonsPanel" Grid.Column="1">
					<Button Classes="Dialog_ControlButton" Command="{Binding #dialog.Close}" Content="{asXaml:StringResource Common.Close}"/>
				</Panel>
			</Grid>
		</Border>

		<!-- Content -->
		<StackPanel Classes="Dialog_ContentPanel">

			<asControls:ListBox Name="providerListBox" Classes="Dialog_ListBox" Height="{StaticResource Double/ScriptLogDataSourceProvidersDialog.ProviderListBox.Height}" ItemsSource="{x:Static appDataSources:LogDataSourceProviders.ScriptProviders}">
				<asControls:ListBox.ItemTemplate>
					<DataTemplate>
						<Grid ColumnDefinitions="Auto,*,Auto">
							<Panel Classes="ListBoxItem_Icon">
								<Image Classes="Icon" IsVisible="{Binding $parent[ListBoxItem].IsSelected}" Source="{StaticResource Image/Code.Light}"/>
								<Image Classes="Icon" IsVisible="{Binding !$parent[ListBoxItem].IsSelected}" Source="{StaticResource Image/Code}"/>
							</Panel>
							<TextBlock Classes="ListBoxItem_TextBlock" Grid.Column="1" Text="{Binding DisplayName}"/>
							<Border Classes="InPlaceAction_Reserved" Grid.Column="1"/>
							<StackPanel Grid.Column="2" IsVisible="{Binding $parent[ListBoxItem].IsPointerOver}" Orientation="Horizontal">
								<Button Classes="InPlaceAction_Button" Command="{Binding #dialog.RemoveProviderCommand}" CommandParameter="{Binding $parent[ListBoxItem].DataContext}" ToolTip.Tip="{asXaml:StringResource Common.Delete}">
									<asControls:Image Classes="InPlaceAction_Icon">
										<DrawingImage>
											<GeometryDrawing Brush="{Binding $parent[ListBoxItem].Foreground}" Geometry="{StaticResource Geometry/Icon.Delete.Outline}"/>
										</DrawingImage>
									</asControls:Image>
								</Button>
								<Button Classes="InPlaceAction_Button" Command="{Binding #dialog.ExportProviderCommand}" CommandParameter="{Binding $parent[ListBoxItem].DataContext}" ToolTip.Tip="{asXaml:StringResource Common.Export}">
									<asControls:Image Classes="InPlaceAction_Icon">
										<DrawingImage>
											<GeometryDrawing Brush="{Binding $parent[ListBoxItem].Foreground}" Geometry="{StaticResource Geometry/Icon.Export}"/>
										</DrawingImage>
									</asControls:Image>
								</Button>
								<Button Classes="InPlaceAction_Button" Command="{Binding #dialog.CopyProviderCommand}" CommandParameter="{Binding $parent[ListBoxItem].DataContext}" ToolTip.Tip="{asXaml:StringResource Common.Copy}">
									<asControls:Image Classes="InPlaceAction_Icon">
										<DrawingImage>
											<GeometryDrawing Brush="{Binding $parent[ListBoxItem].Foreground}" Geometry="{StaticResource Geometry/Icon.Copy.Outline}"/>
										</DrawingImage>
									</asControls:Image>
								</Button>
								<Button Classes="InPlaceAction_Button" Command="{Binding #dialog.EditProviderCommand}" CommandParameter="{Binding $parent[ListBoxItem].DataContext}" ToolTip.Tip="{asXaml:StringResource Common.Edit}">
									<asControls:Image Classes="InPlaceAction_Icon">
										<DrawingImage>
											<GeometryDrawing Brush="{Binding $parent[ListBoxItem].Foreground}" Geometry="{StaticResource Geometry/Icon.Edit.Outline}"/>
										</DrawingImage>
									</asControls:Image>
								</Button>
							</StackPanel>
						</Grid>
					</DataTemplate>
				</asControls:ListBox.ItemTemplate>
			</asControls:ListBox>
			
			<!--Separator Classes="Dialog_Separator_Small" IsVisible="{Binding #providerListBox.IsVisible}"/>
			<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
				<Button Classes="Dialog_Item_Button" Command="{Binding #dialog.AddProvider}" Content="{asXaml:StringResource Common.Add.WithDialog}"/>
				<Separator Classes="Dialog_Separator_Small"/>
				<Button Classes="Dialog_Item_Button" Command="{Binding #dialog.ImportProvider}" Content="{asXaml:StringResource Common.Import.WithDialog}"/>
			</StackPanel-->

		</StackPanel>
		
	</DockPanel>
	
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:appControls="clr-namespace:CarinaStudio.ULogViewer.Controls;assembly=ULogViewer"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CarinaStudio.ULogViewer.Controls.PredefinedLogTextFilterEditorDialog"
				Classes="Dialog"
				SizeToContent="Height"
				Width="{StaticResource Double.PredefinedLogTextFilterEditorDialog.Width}">
	
	<Grid RowDefinitions="*,Auto">

		<!-- Content -->
		<StackPanel HorizontalAlignment="Stretch" Margin="{StaticResource Thickness.Dialog.Content.Padding}" Orientation="Vertical">

			<!-- Name -->
			<TextBlock Classes="Dialog_Label" Text="{DynamicResource String.PredefinedLogTextFilterEditorDialog.Name}"/>
			<TextBox Name="nameTextBox" HorizontalAlignment="Stretch" MaxLength="256" PropertyChanged="OnNameTextBoxPropertyChanged"/>
			<Separator Classes="Dialog_Separator_Horizontal"/>

			<!-- Regex -->
			<TextBlock Classes="Dialog_Label" Text="{DynamicResource String.PredefinedLogTextFilterEditorDialog.Regex}"/>
			<appControls:RegexTextBox Name="regexTextBox" HorizontalAlignment="Stretch" PropertyChanged="OnRegexTextBoxPropertyChanged" Watermark="{DynamicResource String.Common.RegularExpression}"/>
			<TextBlock Classes="Dialog_Description_Link" PointerReleased="OnLinkDescriptionPointerReleased" Tag="https://docs.microsoft.com/en-us/dotnet/standard/base-types/regular-expression-language-quick-reference" Text="{DynamicResource String.Common.RegularExpression.Reference}"/>
			<Separator Classes="Dialog_Separator_Horizontal"/>

			<!-- Ignore case -->
			<TextBlock Classes="Dialog_Label" Text="{DynamicResource String.PredefinedLogTextFilterEditorDialog.IgnoreCase}"/>
			<ToggleSwitch Name="ignoreCaseSwitch" IsChecked="{Binding ElementName=regexTextBox, Path=IgnoreCase, Mode=OneWayToSource}"/>
			
		</StackPanel>

		<!-- Control buttons -->
		<Border Classes="Dialog_ControlButtonsPanel" Grid.Row="1">
			<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
				<Button Classes="Dialog_ControlButton" Command="{Binding $parent[Window].GenerateResultCommand}" Content="{DynamicResource String.Common.OK}"/>
				<Button Classes="Dialog_ControlButton" Command="{Binding $parent[Window].CancelCommand}" Content="{DynamicResource String.Common.Cancel}"/>
			</StackPanel>
		</Border>
		
	</Grid>
  
</Window>
